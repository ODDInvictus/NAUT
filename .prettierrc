{
	"useTabs": false,
	"tabWidth": 2,
	"singleQuote": true,
	"trailingComma": "none",
	"semi": false,
	"arrowParens": "avoid",
	"bracketSameLine": true,
	"htmlWhitespaceSensitivity": "css",
	"quoteProps": "as-needed",
	"svelteAllowShorthand": true,
	"svelteBracketNewLine": false,
	"svelteIndentScriptAndStyle": true,
	"printWidth": 120,
	"plugins": [
		"prettier-plugin-svelte"
	],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}