{
	"name": "ibs-devops",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "concurrently \"vite dev --host --open\" \"npx prisma studio\"",
		"dev:all": "concurrently \"vite dev --host --open\" \"npx prisma studio\" \"npm run dev:backend\"",
		"dev:backend": "cd ./scheduler && air",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"prisma:studio": "prisma studio"
	},
	"prisma": {
		"seed": "node prisma/seed.js"
	},
	"devDependencies": {
		"@iconify-json/ph": "^1.1.11",
		"@iconify/svelte": "^3.1.6",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^4.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"concurrently": "^8.2.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prisma": "^5.7.1",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-toasts": "^1.1.2",
		"sveltekit-flash-message": "^2.4.4",
		"sveltekit-superforms": "^1.13.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"unplugin-icons": "^0.18.5",
		"vite": "^5.0.3",
		"vitest": "^1.0.0",
		"zod": "^3.22.4"
	},
	"type": "module",
	"dependencies": {
		"@picocss/pico": "^2.0.6",
		"@prisma/client": "^5.7.1",
		"@spotify/web-api-ts-sdk": "^1.2.0",
		"generate-password": "^1.7.1",
		"mariadb": "^3.2.3",
		"sass": "^1.69.6"
	}
}